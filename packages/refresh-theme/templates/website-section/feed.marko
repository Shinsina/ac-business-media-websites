import { getAsObject } from "@mindful-web/object-path";

$ const {
  id,
  alias,
  name,
  pageNode,
  context,
} = data;

$ const excludeContentTypes = ["Company", "Contact", "Promotion"];
$ const query = getAsObject(context, "query");
$ const queryName = query.name || "website-scheduled-content";
$ const queryParams = query.params || { sectionId: id, limit: 12, excludeContentTypes };

<refresh-theme-website-section-published-content-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
>
  <@query
    name=queryName
    params=queryParams
  />
</refresh-theme-website-section-published-content-layout>
